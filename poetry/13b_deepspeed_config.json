{
 "bf16": { "enabled": "auto" },
 "fp16": { "enabled": "auto" },
    
  "optimizer": {
        "type": "AdamW",
        "params": {
            "lr": "auto",
            "betas": "auto",
            "eps": "auto",
            "weight_decay": "auto"
        }
    },
    
    "zero_optimization": {
        "stage": 2,
        "offload_optimizer": {
